{% extends "layouts/app.twig" %}

{% block content %}
    <div class="panel">
        <h1 class="line-under-title">Nieuw wachtwoord instellen</h1>

        {% include "layouts/_partials/alerts.twig" %}

        <form method="post" action="{{ route('password.update') }}">
            {{ csrf_field() }}
            <input type="hidden" name="token" value="{{ token }}">

            <div class="form-group floating-label">
                <label for="email">E-mailadres</label>
                <input class="form-control" placeholder="E-mailadres" type="email" id="email" name="email" value="{{ old('email', email) }}" required {% if not old('email', email) %}autofocus{% endif %}>
            </div>

            <div class="form-group floating-label">
                <label for="password">Nieuw wachtwoord</label>
                <input class="form-control" placeholder="Nieuw wachtwoord" type="password" id="password" name="password" required {% if old('email', email) %}autofocus{% endif %}>
            </div>

            <div class="form-group floating-label">
                <label for="password_confirmation">Herhaal nieuw wachtwoord</label>
                <input class="form-control" type="password" id="password_confirmation" name="password_confirmation" required>
            </div>

            <button class="btn btn-primary btn-arrow">Wachtwoord instellen</button>
        </form>
    </div>
{% endblock %}
