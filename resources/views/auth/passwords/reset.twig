{% extends "layouts/guest.twig" %}

{% block panel %}
    <h1 class="mb-4">Nieuw wachtwoord instellen</h1>

    <form method="post" action="/password/reset">
        {{ csrf_field() }}
        <input type="hidden" name="token" value="{{ token }}">

        <div class="form-group">
            <input class="form-control" placeholder="E-mailadres" type="email" name="email" value="{{ old('email', email) }}" autofocus required>
        </div>

        <div class="form-group">
            <input class="form-control" placeholder="Nieuw wachtwoord" type="password" name="password" required>
        </div>

        <div class="form-group">
            <input class="form-control" placeholder="Herhaal nieuw wachtwoord" type="password" name="password_confirmation" required>
        </div>

        <div class="form-group mb-0">
            <button class="btn btn-primary">
                Wachtwoord instellen
            </button>
        </div>
    </form>
{% endblock %}
