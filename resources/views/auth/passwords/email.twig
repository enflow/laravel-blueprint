{% extends "layouts/guest.twig" %}

{% block panel %}
    {% if session_get('status') %}
        <div class="alert alert-success">
            {{ session_get('status') }}
        </div>
    {% endif %}

    <h1 class="mb-4">Wachtwoord vergeten</h1>

    <form method="post" action="/password/email">
        {{ csrf_field() }}

        <div class="form-group">
            <input class="form-control" placeholder="E-mailadres" type="email" name="email" value="{{ old('email') }}" autofocus>
        </div>

        <div class="form-group mb-0">
            <button class="btn btn-primary">
                Versturen
            </button>
        </div>
    </form>
{% endblock %}
