{% embed "components/fields/wrapper.twig" %}
    {% block label %}{{ label ?? name ?? null }}{% endblock %}
    {% block input %}
        <textarea class="textarea shadow-sm focus:ring-primary focus:border-primary block w-full sm:text-sm border-gray-300 rounded-md {{ class ?? null }}"
                  type="{{ type ?? 'text' }}"
                  id="{{ name }}"
                  name="{{ name }}"
                  placeholder="{{ placeholder ?? null }}"
                  rows="{{ rows ?? '4' }}"
                  {{ (attributes ?? null)|raw }}
                  {% if (type ?? 'text') == 'email' %}autocapitalize="off"{% endif %}
                {{ required is defined and required is same as (true) ? 'required' : '' ? 'required' : '' }}
                {{ (readonly ?? null) ? 'readonly' : '' }}
                {{ (disabled ?? null) ? 'disabled' : '' }}
                {{ ((autocomplete is defined and not autocomplete) ? 'autocomplete="off"' : '')|raw }}
                {{ (autofocus ?? false) ? 'autofocus' : '' }}>{{ old(name, value ?? null) }}</textarea>
    {% endblock %}
{% endembed %}
