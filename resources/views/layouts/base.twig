{% apply spaceless %}
    <!doctype html>
    <html lang="{{ app().locale() }}" class="font-sans antialiased text-gray-600">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="csrf-token" content="{{ csrf_token() }}">

        {% set blockTitle = block('title') is defined ? block('title') : null %}
        <title>{{ (title is defined ? title ~ ' - ') ~ (blockTitle ? blockTitle ~ ' - ') ~ config('app.name') }}</title>

        {% block head %}{% endblock %}

        {{ Vite.__invoke(['resources/css/app.css', 'resources/js/app.js']) }}

        {{ livewireStyles() }}
    </head>
    <body class="bg-gray-100 flex flex-col min-h-screen">
    <main class="flex-auto flex flex-col">
        {{ block('body') }}
    </main>

    {{ livewireScripts() }}
    </body>
    </html>
{% endapply %}
